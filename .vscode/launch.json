    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run unit test",
            "cwd": "${workspaceFolder}/ETL",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/ETL/target/app.js",
            "args": ["./target/settings.json", "./target/secret.json", "--test"],
            "preLaunchTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run connected test",
            "cwd": "${workspaceFolder}/ETL",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/ETL/target/connector.js",
            "args": ["./target/secret.json"],
            "preLaunchTask": "build"
        }
    ]
}